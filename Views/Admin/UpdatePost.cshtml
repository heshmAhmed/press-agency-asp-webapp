@model press_agency_asp_webapp.ViewModels.CreatePostViewModel
@{
    ViewBag.Title = "UpdatePost";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-8 col-sm-7 col-xs-7 py-5 ">
    @using (Html.BeginForm("UpdatePost", "Admin", FormMethod.Post, new
    {
        @class = "form-horizontal",
        role = "form",
        enctype = "multipart/form-data",
        onsubmit = "return validateForm()"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="title">Title</label>
            @Html.EditorFor(model => model.Title, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   id = "title",
                   required = "true",
                   value = Model.Title
               }
           })
        </div>
        <div class="form-group">
            <label for="body">Body</label>
            @Html.TextAreaFor(model => model.Body, new
       {
           @class = "form-control",
           required = "true",
           id = "body",
           value = Model.Body, 
           style ="height: 300px"
       })

        </div>
        <div class="form-group">
            <label for="nolikes">No Of Likes</label>
            @Html.EditorFor(model => model.No_Likes, new
       {
           @class = "form-control",
           required = "true",
           id = "nolikes",
           value = Model.No_Likes,
       })

        </div>
        <div class="form-group">
            <label for="nodislikes">No Of Dislikes</label>
            @Html.EditorFor(model => model.No_DisLikes, new
       {
           @class = "form-control",
           required = "true",
           id = "nodislikes",
           value = Model.No_DisLikes,
           type = "number"
       })

        </div>
        <div class="form-group">
            <label for="noviews">No Of Views</label>
            @Html.EditorFor(model => model.No_Views, new
       {
           @class = "form-control",
           required = "true",
           id = "noviews",
           value = Model.No_Views,
           type = "number"
       })

        </div>
        <div class="custom-file mb-2">
            <input type="file" class="custom-file-input" name="postImage"
                   value="@Model.PostImage"
                   id="image">
            <label class="custom-file-label" for="image">Choose image</label>
        </div>

        <div class="form-group">
            @Html.DropDownListFor(model => model.PostTypeId, new SelectList(Model.PostTypes, "Id", "Name"), "Select post type", new { htmlAttributes = new { @class = "form-control", required = "true" } })
        </div><div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
        <div class="alert alert-danger" id="alert" style="display:none">You must choose post type </div>
    }
</div>
