@model IEnumerable<press_agency_asp_webapp.Models.Post>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_WallLayout.cshtml";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.No_views)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.No_likes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.No_dislikes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.No_views)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.No_likes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.No_dislikes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EditorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImagePath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
