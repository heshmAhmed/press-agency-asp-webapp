@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    dynamic Layout;
    switch (CurrentName)
    {
        case "Viewer":
            Layout = "~/Views/Shared/_WallLayout.cshtml";
            break;
        case "Editor":
            Layout = "~/Views/Shared/_FactoryLayout.cshtml";
            break;
        case "Admin":
            Layout = "~/Views/Shared/_DashboardLayout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_WallLayout.cshtml";
            break;
    }
}  