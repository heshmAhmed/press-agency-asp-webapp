<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Hesham Ahmed">

    <title>@ViewBag.Title - Press Agency</title>

    @Scripts.Render("~/Scripts/jquery-3.6.0.js")
    @Scripts.Render("~/Scripts/bootstrap.bundle.min.js")
    @Styles.Render("~/Content/bootstrap.min.css")
</head>
<body class="h-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Press Agency</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">

            <ul class="navbar-nav">
                <li> <a class="nav-link" href="/Actor/LogOut">Logout</a></li>
            </ul>
            <form class="form-inline my-2 my-lg-0" method="post" action="~/Viewer/Search">
                <input class="form-control mr-sm-2" placeholder="Search" aria-label="Search" name="searchItem">
                <button class="btn btn-info my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container-fluid" style="height: 100%">
        <div class="row h-100">
            <div class="col-md-2 col-sm-2 col-xs-2 py-5 bg-dark">
                <ul class="nav flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link" href="/Actor/Profile">Profile</a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link active" href="/Editor/CreatePost">Create new post</a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link" href="/Editor/History">My posts</a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link" href="/Editor/Questions">Received questions</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 col-sm-10 col-xs-10">

                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
